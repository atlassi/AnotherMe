            input.input.form-control(type='text', placeholder='', name='email')
            br
            input.input.form-control(type='text', placeholder='', name='city')
            br
            input.input.form-control.input1(type='text', placeholder='', name='password')
            button.btn.btn-default.edit(type='submit') Save
      .col-lg-1.space

  .container.about
    .rows
      .col-lg-2
      .col-lg-1.space
      .col-lg-8.abouttextArea
        p About Me
        input.aboutMe.form-control(type='textarea', placeholder='write something about you!')
        button.btn.btn-default.edit(type='submit') Save

