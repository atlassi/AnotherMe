      .col-lg-4.detailsform
         form.input-field1(action='/', method='post', autocomplete='off')
            input.input.form-control(type='text', name='name', placeholder="Enter Your Name",autocomplete='off')
            br
            input.input.form-control(type='text', placeholder='example@email.com', name='email')
